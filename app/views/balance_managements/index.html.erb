<h1>Products#index</h1>
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
<% @balance_managements.each do |balance_management| %>
  <%= balance_management.name %>
  <%= balance_management.description %>
  <%= balance_management.price %>
  <%= link_to "Show", balance_management_path(balance_management) %>
  <%= link_to "Edit", edit_balance_management_path(balance_management) %>
  <%= link_to 'Delete', balance_management_path(balance_management), method: :delete, data: { confirm: 'Are you sure?' }  %>
<% end %>

<%= link_to "New", new_balance_management_path %>
<button type="button" class="btn btn-info">NEW</button>